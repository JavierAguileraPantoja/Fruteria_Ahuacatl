<%- include('layout/header') %>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-center text-success fw-bold mb-4">
                <i class="fas fa-users me-2"></i>Gestión de Usuarios
            </h2>

            <% if (message){ %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <!-- Botón Agregar Usuario -->
            <div class="d-flex justify-content-end mb-3">
                <% if (user && (user.role === 'administrador' || user.role === 'dueno')) { %>
                    <a href="/add" class="btn btn-primary shadow-sm">
                        <i class="fas fa-user-plus me-1"></i> Agregar Usuario
                    </a>
                <% } %>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <% if (users != '') { %>
                        <div class="table-responsive">
                            <table class="table align-middle text-center table-hover">
                                <thead class="table-success">
                                    <tr>
                                        <th>#</th>
                                        <th>Imagen</th>
                                        <th>Nombre</th>
                                        <th>Email</th>
                                        <th>Teléfono</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((row, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td>
                                                <img src="/Uploads/<%= row.image %>" width="70" class="rounded-circle shadow-sm">
                                            </td>
                                            <td class="fw-semibold"><%= row.name %></td>
                                            <td><%= row.email %></td>
                                            <td><%= row.phone %></td>
                                            <td>
                                                <a href="/edit/<%= row._id %>" class="btn btn-outline-success btn-sm mx-1">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/delete/<%= row._id %>" class="btn btn-outline-danger btn-sm mx-1">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <h3 class="text-center text-secondary mt-4">Sin registros</h3>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
  body {
    background-color: #f5fff7; /* Fondo verde claro frutal */
  }

  .card {
    background-color: #e8f9ee; /* Verde pastel */
  }

  .table thead tr {
    background-color: #b8e6c9 !important; /* Encabezado suave */
  }

  .table tbody tr:hover {
    background-color: #dcf8e3;
    transition: 0.3s ease;
  }

  h2 {
    letter-spacing: 1px;
  }
</style>
